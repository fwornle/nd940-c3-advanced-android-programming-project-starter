<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- A transition describes an animation via start and end state -->
    <Transition
        app:constraintSetStart="@+id/start"
        app:constraintSetEnd="@+id/end">
        <OnSwipe
            app:touchAnchorId="@id/ivDownloadSymbol"
            app:touchAnchorSide="middle"
            />


        <KeyFrameSet>
            <!-- transition path -->
            <KeyPosition
                app:framePosition="20"
                app:motionTarget="@id/ivDownloadSymbol"
                app:keyPositionType="parentRelative"
                app:percentX="0.1"
                />
            <KeyPosition
                app:framePosition="40"
                app:motionTarget="@id/ivDownloadSymbol"
                app:keyPositionType="parentRelative"
                app:percentX="0.5"
                />
            <KeyPosition
                app:framePosition="60"
                app:motionTarget="@id/ivDownloadSymbol"
                app:keyPositionType="parentRelative"
                app:percentX="0.9"
                />

            <!--  attribute changes along the transition -->
            <KeyAttribute
                app:framePosition="40"
                app:motionTarget="@id/ivDownloadSymbol"
                android:scaleY="0.5"
                android:scaleX="0.5"
                android:rotation="-360"
                />
            <KeyAttribute
                app:framePosition="60"
                app:motionTarget="@id/ivDownloadSymbol"
                android:scaleY="0.2"
                android:scaleX="0.2"
                android:rotation="-720"
                />
            <KeyAttribute
                app:framePosition="100"
                app:motionTarget="@id/ivDownloadSymbol"
                android:rotation="-1080"
                />

        </KeyFrameSet>
    </Transition>

    <!-- Constraints to apply at the start of the animation -->
    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@id/ivDownloadSymbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvRepoName" />

        <Constraint
            android:id="@id/ivRepoPreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />
    </ConstraintSet>

    <!-- Constraints to apply at the end of the animation -->
    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@id/ivDownloadSymbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <Constraint
            android:id="@id/ivRepoPreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvRepoName" />
            />
    </ConstraintSet>

</MotionScene>